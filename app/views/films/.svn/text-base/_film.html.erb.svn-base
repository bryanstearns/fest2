<%# A film in the public festival list %>
	<% content_tag_for :tr, film do %>
    <% if logged_in? %>
      <td>
      <%= render :partial => "picks/pick_form_in_film_list", 
                 :locals => { :film => film, :picks => picks } %>
      </td>
    <% end %>
	  <%# priority_widget(film, current_user, picks[film.id]) if logged_in? -%>
    <td>
  	  <%= link_to_film film, :target => "_blank", :class => "name" %>
  	  <span class="duration">(<%= film.minutes %> minutes<%= ", #{film.country_names('/')}" if film.countries %>)</span>
	  <%= content_tag(:a, image_tag("fam3silk/dvd.png", :class => "dvd", :alt => "DVD", :title => "Available on DVD; click for its Amazon.com page"), 
                      :href => dvd_film_url(film), :target => "_blank") if film.amazon_url -%>
  	  <%= content_tag(:div, h(film.description), :class => "description") if film.description -%>
  	  <% 
  	    now = Time.now
  	    screenings = film.screenings.sort_by { |x| x.starts + (x.ends < now ? 10.years : 0) }
  	    unless screenings.empty?
  	  -%>
    	  <div class="screenings">
    	    <label><%= pluralize(screenings.size, "screening") %>:</label>
          <ul>
              <%= render :partial => "screenings/screening", :collection => screenings,
                         :locals => { :pick => (logged_in? ? picks[film.id] : nil) } %>
    	    </ul>
    	  </div>
      <% end -%>
    </td>
	<% end %>
