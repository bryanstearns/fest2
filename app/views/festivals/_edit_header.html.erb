<%# The header for publicly-visible Festival pages:
    /festivals/x, /festivals/x/films/, etc. -%>
<% hide_tabs ||= nil %>
<%= render :partial => "application/tabs",
           :locals => {
             :tabs => [
               ["Festival", edit_festival_path(@festival), festival_path(@festival)],
               ["Locations", festival_locations_path(@festival)],
               ["Films", festival_films_path(@festival)],
             ],
             :hide_tabs => hide_tabs
           } %>

<%= render :partial => "festivals/title" %>
