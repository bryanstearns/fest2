<%# The header for publicly-visible Festival pages: 
    /festivals/x, /festivals/x/films/, etc. -%>
  <% round_corners :context => self, :tabs => !hide_tabs, :width => "100%" do |rc| %>
    <div>
      <span class="festivalname"><%= @festival.name %></span>
      <span class="festivaldates"><%= @festival.dates %></span>
    </div>
    <% 
    unless hide_tabs
      if conference_mode
        rc.tabs do
          rc.tab("All Sessions", poly_festival_films_path(@festival))
          rc.tab("Your Conference Schedule", poly_festival_path(@festival))
        end
      else
        rc.tabs do
          rc.tab("Your Film Priorities", poly_festival_films_path(@festival))
          rc.tab("Scheduling Assistant", festival_settings_path(@festival))
          rc.tab("Your Festival Schedule", poly_festival_path(@festival))
        end
      end
    end
    -%>
  <% end %>
