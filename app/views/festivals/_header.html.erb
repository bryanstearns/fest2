<%# The header for publicly-visible Festival pages: 
    /festivals/x, /festivals/x/films/, etc. -%>
<%
  tabs = [
    ["1. Your Film Priorities", festival_films_path(@festival)],
    ["2. Scheduling Assistant", festival_assistant_path(@festival)],
    ["3. Your Festival Schedule", festival_path(@festival)]
  ]
-%>

<% unless hide_tabs -%>
  <% content_for :tab_items do -%>
    <% tabs.each do |label, url| -%>
      <% if current_page?(url) -%>
        <li class="current"><span><%= label %></span></li>
      <% else -%>
        <li class="other"><%= link_to label, url %></li>
      <% end -%>
    <% end -%>
  <% end -%>

  <% content_for :tab_prefix do %>
    <ul class="navlinks prefix">
      <%= yield :tab_items %>
    </ul>
  <% end -%>
  <% content_for :tab_suffix do %>
    <ul class="navlinks suffix">
      <%= yield :tab_items %>
    </ul>
  <% end -%>
<% end -%>

<h2>
  <div><%= @festival.name %></div>
  <span><%= @festival.location %> &mdash; <%= @festival.dates %></span>
</h2>

