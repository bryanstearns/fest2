<%# One viewing on the schedule grid, from /festivals/_day -%>
<div id="screening-<%= viewing_info.screening.id %>"
     class="screening unranked"
     style="height: <%= viewing_info.height %>px; margin-top: <%= viewing_info.space_before %>px"
     data-film_id="<%= viewing_info.film.id %>">
  <a name="s<%= viewing_info.screening.id %>"></a>
  <span class="priority"></span>
  <h3><%= viewing_info.film_name %></h3>
  <div class="screeningtime">
    <%= t = viewing_info.screening_times.split(' - ')
        t[1] += ","
        t.map {|t| '<span>' + t + '</span>' }.join(' &ndash; ') %>
    <span><%= viewing_info.ordinalize %></span>
    <%= "<span> (press)</span>" if viewing_info.screening.press %>
  </div>
</div>
