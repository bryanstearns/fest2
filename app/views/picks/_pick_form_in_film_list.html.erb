      <%
      form_id = "#{dom_id(film)}_pick"
      form_for [film, pick],
               :url => film_picks_path(film, :format => :js),
               :html => { :method => :post, :class => "priority",
                          :id => form_id } do |f| %>
        <div class="large_pick dots">
        <% ['cancel', 0, 1, 2, 3, 4].each do |p| %>
          <%= f.radio_button :priority, p, :title => ranking_hints[p], :id => "#{form_id}_#{p}" %>
        <% end %>
        </div>
      <% end %>
