<h1>Listing buzz</h1>

<table>
  <tr>
    <th>Film</th>
    <th>User</th>
    <th>Content</th>
    <th>Url</th>
    <th>Published at</th>
  </tr>

<% @buzz.each do |buzz| %>
  <tr>
    <td><%=h buzz.film_id %></td>
    <td><%=h buzz.user_id %></td>
    <td><%=h buzz.content %></td>
    <td><%=h buzz.url %></td>
    <td><%=h buzz.published_at %></td>
    <td><%= link_to 'Show', buzz %></td>
    <td><%= link_to 'Edit', edit_buzz_path(buzz) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New buzz', new_film_buzz_path(@film) %>