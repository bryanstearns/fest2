<% content_for :title do %>Forgot your password or email address?<% end %>

<% form_tag send_password_reset_path, :id => "forgot_form" do -%>

  <h2>Forgot your password, or which email address you used?</h2>
  <p>
    <label for="email">
      No problem! We'll get you back in in a jiffy.
      What's your email address?
    </label>
    <br/>
    <%= text_field_tag 'email' %>
  </p>
  <p><%= submit_tag 'Help me out', :class => "button" %></p>
<% end -%>
