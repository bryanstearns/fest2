<% content_for :title do %>Users<% end %>
<% content_for :header do %>
  <% round_corners :width => "100%" do |rc| %>
    <h2>All Users</h2>
  <% end %>
<% end %>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= h(user.login) %><%= " <b>(admin)</b>" if user.admin %></td>
      <td><%= h(user.email) %></td>
      <td><%= link_to "send password reset",
                      send_password_reset_path(:login => user.login),
                      :method => :post %></td>
    </tr>
  <% end -%>
</table>
