<% content_for :title do %>Reset Password<% end %>

<h2>Reset your Password</h2>

<%= error_messages_for :user %>

<% form_for(@user) do |f| -%>
  <p><label for="username">Email Address</label><br/>
  <b><%= @user.email %></b></p>

  <p><label for="username">Username</label><br/>
  <b><%= @user.username %></b></p>

<p><label for="password">New Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirm New Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<p>
<%= hidden_field_tag 'secret', @user.crypted_password %>
<%= submit_tag 'Change Password', :class => "button" %>
</p>
<% end -%>
