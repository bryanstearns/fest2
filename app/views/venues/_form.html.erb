<%# The venue-editing form in /festivals/edit.html.erb -%>
<% venue ||= form -%>
<div id="venue_form" class="form">
  <%= error_messages_for :venue %>
  <% form_for [location, venue] do |f| %>
    <table>
      <tr>
        <th rowspan="2"><%= venue.new_record? ? "New" : "Edit" %> Venue:</th>
        <th>Name</th>
        <th>Abbrev</th>
      </tr>
      <tr>
        <td><%= f.text_field :name, :size => 30 %></td>
        <td><%= f.text_field :abbrev, :size => 10 %></td>
        <td><%= f.submit %></td>
      </tr>
    </table>
  <% end %>
</div>
